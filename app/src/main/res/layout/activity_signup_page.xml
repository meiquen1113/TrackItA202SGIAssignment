<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SignupPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/signuppagelogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Create New Account"
        android:textColor="@color/message_color"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/SignUpMessageDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your saving journey starts here"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/text_Prompt_color"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/NameDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_Prompt_color"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EntFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/name_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/EmailDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textColor="@color/text_Prompt_color"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EntEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/UsernameDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textColor="@color/text_Prompt_color"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EntTxtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/username_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/PasswordDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textColor="@color/text_Prompt_color"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EntTxtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/BtnSignUp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#ee5500"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/LoginShortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Already registered? Log in here"
        android:textStyle="bold"
        android:onClick="gotoLoginPage2"
        android:textColor="#E0504E"
        android:textSize="20dp"/>


</LinearLayout>