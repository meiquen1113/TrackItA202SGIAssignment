<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="8dp"
    android:outlineAmbientShadowColor="@color/design_default_color_primary"
    android:backgroundTint="#F0FBF7"
    app:cardCornerRadius="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idTVoid"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="oid"/>

        <TextView
            android:id="@+id/idTVloguser"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="user"/>

        <TextView
            android:id="@+id/idTVExpenseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:gravity="left"
            android:textSize="15dp"
            android:text="Date"
            android:textColor="#aB3324"
            android:visibility="visible"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVExpenseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:padding="5dp"
                android:text="Description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVExpenseCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:padding="5dp"
                android:text="Category"
                android:textStyle="bold"
                android:textColor="#3F48CC" />

        </LinearLayout>

        <TextView
            android:id="@+id/idTVExpenseAmount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:padding="5dp"
            android:text="Amount"
            android:textSize="15dp"
            android:textColor="#007800"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>